<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8DFF0026"
    android:orientation="horizontal"
    android:padding="8dp">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:contentDescription="Brick thmub"
      tools:src="@tools:sample/avatars" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical"
      android:padding="5dp">

    <TextView
        android:id="@+id/brick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Brick_name" />

    <TextView
        android:id="@+id/brick_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="brick_type" />

    <TextView
        android:id="@+id/brick_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="brick_code" />

    <TextView
        android:id="@+id/brick_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 of 1"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <Button
          android:id="@+id/button3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="-" />

      <Button
          android:id="@+id/button4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="+" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>